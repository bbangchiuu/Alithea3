@using Alithea3.Models
@model Alithea3.Models.UserAccount

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var listUserRoles = ViewBag.listUserRoles as List<UserAccountRole>;
}

<div class="row">
    <div class="col-lg-6 col-xl-4 grid-margin stretch-card style-detail">
        <div class="card">
            <div class="card-img-top text-center pt-3">
                <img class="border-primary" src="@Html.DisplayFor(model => model.Image)"
                     style="max-width: 100%; max-height: 180px; padding: 4px; border: 2px solid; border-radius: 100%" alt="Avatar" />
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    <b>ID # @Html.DisplayFor(model => model.UserID)</b>
                </h5>
                <p class="card-text">
                    <b>@Html.DisplayNameFor(model => model.RoleNumber): </b>
                    @Html.DisplayFor(model => model.RoleNumber)
                </p>
                <p class="card-text">
                    <b>@Html.DisplayNameFor(model => model.Username): </b>
                    @Html.DisplayFor(model => model.Username)
                </p>
                <p class="card-text">
                    <b>@Html.DisplayNameFor(model => model.FullName): </b>
                    @Html.DisplayFor(model => model.FullName)
                </p>
                <p class="card-text">
                    <b>@Html.DisplayNameFor(model => model.Email): </b>
                    @Html.DisplayFor(model => model.Email)
                </p>
                <p class="card-text">
                    <b>@Html.DisplayNameFor(model => model.Address): </b>
                    @Html.DisplayFor(model => model.Address)
                </p>
                <p class="card-text">
                    <b>@Html.DisplayNameFor(model => model.Phone): </b>
                    @Html.DisplayFor(model => model.Phone)
                </p>
                <p class="card-text">
                    <b>@Html.DisplayNameFor(model => model.BirthDay): </b>
                    @Html.DisplayFor(model => model.BirthDay)
                </p>
                <p class="card-text">
                    <b>@Html.DisplayNameFor(model => model.CreatAt): </b>
                    @Html.DisplayFor(model => model.CreatAt)
                </p>
                <p class="card-text">
                    <b>@Html.DisplayNameFor(model => model.UpdateAt): </b>
                    @Html.DisplayFor(model => model.UpdateAt)
                </p>
                <p class="card-text">
                    <b>@Html.DisplayNameFor(model => model.Status): </b>
                    <span class="badge @(Model.Status == UserAccount.UserAccountStatus.Active ? "badge-gradient-primary" : Model.Status == UserAccount.UserAccountStatus.DeActive ? "badge-gradient-warning" : "badge-gradient-secondary")">
                        @Html.DisplayFor(model => model.Status)
                    </span>
                </p>
                <p class="card-text">
                    <b>Vai trò: </b>
                    @for (int i = 0; i < listUserRoles.Count; i++)
                    {
                        <a href="#" class="badge badge-info">
                            @listUserRoles[i].Role.RoleName
                        </a>
                    }
                </p>
                <div class="d-sm-flex">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.UserID }, new { @class = "btn btn-sm btn-warning mr-3" })
                    <a class="btn btn-light btn-sm mt-2 mt-sm-0" href="@Url.Action("Index")">
                        Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
